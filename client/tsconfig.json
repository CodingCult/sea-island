{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "strict": true,
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": ["src/**/*", "assets"]
}
